<view>
    <name>JIVE</name>
    <label>JIVE</label>
    <version>${project.version}</version>

    <parameter>
        <name>jive.temp.folder</name>
        <label>Jive Temp File Folder</label>
        <description>Absolute path.</description>
        <default-value>/tmp/jive</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.json.path</name>
        <label>Jive JSON Path</label>
        <description>Absolute path to JSON files (without date folder).</description>
        <default-value>/etl/uc/mongo</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.hive.host</name>
        <label>HIVE host</label>
        <description>Name or IP of HIVE host.</description>
        <default-value>vs-dip-dev02.server.uc</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.hive.port</name>
        <label>HIVE port</label>
        <description>HIVE Port.</description>
        <default-value>10000</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.hive.principal.user</name>
        <label>HIVE user</label>
        <description>Proxy user to connect with, will delegate to logged in users permissions.</description>
        <default-value>hive</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.jaas.conf.file</name>
        <label>JAAS config file</label>
        <description>Absolute location of jaas config file.</description>
        <default-value>/etc/ambari-server/conf/jive.conf</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.hive.host.realm</name>
        <label>Host realm</label>
        <description>Host realm.</description>
        <default-value>UCDIP.LOCAL</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.hdfs.endpoint</name>
        <label>HDFS endpoint</label>
        <description>HDFS endpoint.</description>
        <default-value>hdfs://vs-dip-srv01.server.uc:8020</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.hive.auth.disable</name>
        <label>Authentication disabled</label>
        <description>Authentication disabled. Useful in environments where security is disabled.</description>
        <default-value>true</default-value>
        <required>true</required>
    </parameter>
    <parameter>
        <name>jive.schema.location</name>
        <label>JSON schema location</label>
        <description>Where json schema are located.</description>
        <default-value>/Users/chrisrozacki/meta-data/schema/etl/uc/mongo</default-value>
        <required>true</required>
    </parameter>
</view>